<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net8.0;net9.0</TargetFrameworks>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <LangVersion>latest</LangVersion>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <AssemblyName>Unpdf.Net</AssemblyName>

    <!-- Package metadata -->
    <PackageId>Unpdf</PackageId>
    <Version>0.1.6</Version>
    <Authors>iyulab</Authors>
    <Description>High-performance PDF content extraction to Markdown, text, and JSON</Description>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageProjectUrl>https://github.com/iyulab/unpdf</PackageProjectUrl>
    <RepositoryUrl>https://github.com/iyulab/unpdf</RepositoryUrl>
    <PackageTags>pdf;markdown;text-extraction;document;parser</PackageTags>
    <PackageReadmeFile>README.md</PackageReadmeFile>

    <!-- Enable native library packaging -->
    <GeneratePackageOnBuild>false</GeneratePackageOnBuild>
    <IncludeNativeLibrariesForSelfExtract>true</IncludeNativeLibrariesForSelfExtract>
  </PropertyGroup>

  <ItemGroup>
    <None Include="README.md" Pack="true" PackagePath="\" />
  </ItemGroup>

  <!-- Native library references -->
  <ItemGroup>
    <None Include="runtimes\win-x64\native\unpdf.dll" Pack="true" PackagePath="runtimes\win-x64\native\" Condition="Exists('runtimes\win-x64\native\unpdf.dll')" />
    <None Include="runtimes\linux-x64\native\libunpdf.so" Pack="true" PackagePath="runtimes\linux-x64\native\" Condition="Exists('runtimes\linux-x64\native\libunpdf.so')" />
    <None Include="runtimes\osx-x64\native\libunpdf.dylib" Pack="true" PackagePath="runtimes\osx-x64\native\" Condition="Exists('runtimes\osx-x64\native\libunpdf.dylib')" />
    <None Include="runtimes\osx-arm64\native\libunpdf.dylib" Pack="true" PackagePath="runtimes\osx-arm64\native\" Condition="Exists('runtimes\osx-arm64\native\libunpdf.dylib')" />
  </ItemGroup>

</Project>
